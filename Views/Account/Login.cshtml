@model EventManagementWebApp.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>

    .login-container {
        height: 100vh;
        background-color: #fff;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
        text-align: left;
        background-color: #f5f5f5;
        margin: auto;
        height: auto;
    }

    .login-header {
        margin-bottom: 2rem;
    }

        .login-header h2 {
            font-size: 2rem;
            font-weight: bold;
        }

        .login-header p {
            color: #777;
        }

    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
        text-align: "center"
    }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            padding-left: 2.5rem; /* Adjust padding to make room for the icon */
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
        }

        .form-group label {
            display: none;
        }

        .form-group .icon {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            font-size: 1.2rem;
            color: #777;
        }

    .btn-primary {
        background-color: #6a11cb;
        border: none;
        width: 100%;
        padding: 0.75rem;
        font-size: 1.1rem;
        font-weight: bold;
        border-radius: 5px;
        color: #fff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #2575fc;
        }

    .alert-danger {
        margin-bottom: 1rem;
        color: #721c24;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        padding: 0.75rem 1.25rem;
        border-radius: 0.25rem;
    }

    .register-link {
        margin-top: 1.5rem;
        display: block;
        text-decoration: none;
        color: #6a11cb;
        font-size: 0.9rem;
    }

        .register-link:hover {
            color: #2575fc;
        }
</style>

<div class="login-container">
    <div class="login-header">
        <h2>Welcome Back</h2>
        <p>Please login to access your account</p>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>There was an error with your login attempt:</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <span class="icon">
                <i class="fa fa-envelope"></i>
            </span>
            <input asp-for="Email" placeholder="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <span class="icon">
                <i class="fa fa-lock"></i>
            </span>
            <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check text-left">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <a href="@Url.Action("Register", "Account")" class="register-link">Don't have an account? Register</a>
</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
